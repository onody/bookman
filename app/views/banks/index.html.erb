<h1><%= t('activerecord.models.bank') %></h1>

<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th><%= t '.id' %></th>
      <th><%= t '.name' %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.id %></td>
        <td><%= bank.name %></td>
        <td>
          <%= link_to 'Edit', edit_bank_path(bank) %> /
          <%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('banks.common.new_bank'), new_bank_path, class: 'btn btn-raised btn-primary' %>
